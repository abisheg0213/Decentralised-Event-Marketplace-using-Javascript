<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="shortcut icon" href="public/images/favicon.ico" type="image/x-icon" />
    <!-- Icon - IconMonster -->
    <link rel="stylesheet" href="https://cdn.iconmonstr.com/1.3.0/css/iconmonstr-iconic-font.min.css" />
    <!-- Mumble UI -->
    <link rel="stylesheet" href="public/uikit/styles/uikit.css" />
    <!-- Dev Search UI -->
    <link rel="stylesheet" href="public/styles/app.css" />

    <title>DevSearch - Connect with Developers!</title>
</head>

<body>
    <!-- Header Section -->
    <header class="header">
        <div class="container container--narrow">
          <a href="/" class="header__logo">
            <img src="public/images/logo.svg" alt="DevSearch Logo" />
          </a>
          <nav class="header__nav">
            <input type="checkbox" id="responsive-menu" />
            <label for="responsive-menu" class="toggle-menu">
              <span>Menu</span>
              <div class="toggle-menu__lines"></div>
            </label>
            <ul class="header__menu">
              <li class="header__menuItem"><a href="/register_event">Register New Event</a></li>
              <li class="header__menuItem"><a href="projects.html">Book Ticket</a></li>
              <li class="header__menuItem"><a href="inbox.html">Cancel Ticket</a></li>
              <li class="header__menuItem"><a href="login.html" class="btn btn--sub">Login</a></li>
            </ul>
          </nav>
        </div>
      </header>

    <!-- Main Section -->
    <main class="formPage my-xl">
        <div class="content-box">
            <div class="formWrapper">
                <a class="backButton" href="#"><i class="im im-angle-left"></i></a>
                <br>

                <form class="form" method="POST" action="/register_event">
                    <!-- Input:Text -->   <!-- Input:Text -->
                    <div class="form__field">
                        <label for="formInput#text">Event Name: </label>
                        <input class="input input--text" id="formInput#text" type="text" name="eventname"
                            placeholder="Enter text" />
                    </div>

                    <!-- Input:Text -->
                    <div class="form__field">
                        <label for="formInput#text">No of Tickets Available:</label>
                        <input class="input input--text" id="formInput#text" type="text" name="nooftics"
                            placeholder="Enter text" />
                    </div>
                    <div class="form__field">
                        <label for="formInput#text">URL: </label>
                        <input class="input input--text" id="formInput#text" type="text" name="url"
                            placeholder="Enter text" />
                    </div>
                    <div class="form__field">
                        <label for="formInput#text">Rate: </label>
                        <input class="input input--text" id="formInput#text" type="text" name="rate"
                            placeholder="Enter text" />
                    </div>
                    <div class="form__field">
                        <label for="formInput#text">Place: </label>
                        <input class="input input--text" id="formInput#text" type="text" name="place"
                            placeholder="Enter text" />
                    </div>
                    <!-- <div class="form__field">
                        <label for="formInput#text">Time: </label>
                        <input class="input input--text" id="formInput#text" type="text" name="time"
                            placeholder="Enter text" />
                    </div> -->
                    <div class="form__field">
                        <label for="formInput#text">Address: </label>
                        <input class="input input--text" id="formInput#text" type="text" name="address"
                            placeholder="Enter text" />
                    </div>
                    <input class="btn btn--sub btn--lg  my-md" type="submit" value="Submit" />
                </form>
            </div>
        </div>
    </main>
</body>

</html>